<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ccffcc">

    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:id="@+id/listrow_TitleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="#22CC22"
        android:padding="8dp"
        android:textSize="15sp"
        android:text="Text"
        app:bootstrapBrand="secondary" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapThumbnail
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/listrow_ImageView"
            android:src="@mipmap/ltdexp"
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            app:hasBorder="true"/>

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:padding="10dip"
            android:id="@+id/listrow_TextView"
            app:bootstrapBrand="primary"
            android:layout_marginBottom="10dp"
            android:text="のぞみ12号" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/reserved_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/reserved"
                android:layout_span="2"/>

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/green_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/green"
                android:layout_span="2"/>

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/granclass_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/granclass" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/reserved_ns_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/nonsmoking"/>

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/reserved_s_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/smoking"/>

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/green_ns_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/nonsmoking"/>

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/green_s_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/smoking"/>

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/granclass_ns_image"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/nonsmoking"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/result_reserved_ns"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/sankaku" />

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/result_reserved_s"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/maru" />

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/result_green_ns"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/batsu" />

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/result_green_s"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/nashi" />

            <com.beardedhen.androidbootstrap.BootstrapThumbnail
                android:id="@+id/result_granclass_ns"
                app:bootstrapBrand="regular"
                app:roundedCorners="true"
                android:src="@mipmap/batsu" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"></LinearLayout>

</LinearLayout>